<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <display-name>ABCL</display-name>
    <context-param>
        <param-name>abcl.servlet.load.0</param-name>
        <param-value>/lisp/swank-servlet.lisp</param-value>
    </context-param>
    <servlet>
        <servlet-name>org.abcl.servlet.lisp</servlet-name>
        <servlet-class>org.abcl.servlet.Lisp</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>Resource</servlet-name>
        <servlet-class>org.abcl.servlet.Resource</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>org.abcl.servlet.lisp</servlet-name>
        <url-pattern>/post/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Resource</servlet-name>
        <url-pattern>/get/*</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
